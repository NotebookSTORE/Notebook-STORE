<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:context=".ui.myAccount.MerchantProfileFrag">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clNameView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvNameView"
                    android:text="@string/strNameField"
                    style="@style/MerchantProfileCustomTextView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/tvUserNameView"
                    android:text="User Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/filter_unselect_bg"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameView"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMerchantIDView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clNameView">

                <TextView
                    android:id="@+id/tvMerchantIDView"
                    android:text="Merchant ID"
                    style="@style/MerchantProfileCustomTextView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/tvMerchantDataView"
                    android:text="NS202012546"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/filter_unselect_bg"
                    app:layout_constraintTop_toBottomOf="@+id/tvMerchantIDView"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSponserIDView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clMerchantIDView">

                <TextView
                    android:id="@+id/tvSponserIDView"
                    android:text="Refferal Code"
                    style="@style/MerchantProfileCustomTextView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/tvSponserDataView"
                    android:text="NS202012699"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/filter_unselect_bg"
                    app:layout_constraintTop_toBottomOf="@+id/tvSponserIDView"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clWalletAmountView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clSponserIDView">

                <TextView
                    android:id="@+id/tvWalletAmountView"
                    android:text="Wallet Amount"
                    style="@style/MerchantProfileCustomTextView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/tvWalletAmountValueView"
                    android:text="₹ 1710/-"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/filter_unselect_bg"
                    app:layout_constraintTop_toBottomOf="@+id/tvWalletAmountView"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCommissionAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clWalletAmountView">

                <TextView
                    android:id="@+id/tvCommissionView"
                    android:text="Commission Amount"
                    style="@style/MerchantProfileCustomTextView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/tvCommissionAmountView"
                    android:text="₹ 2010/-"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/filter_unselect_bg"
                    app:layout_constraintTop_toBottomOf="@+id/tvCommissionView"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnViewSummary"
                android:text="View Summary"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/sign_up_btn_bg"
                app:layout_constraintTop_toBottomOf="@+id/clCommissionAmount"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>